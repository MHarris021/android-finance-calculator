<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <style name="Textview" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="couponText" parent="Textview">
        <item name="android:gravity">right</item>
        <item name="android:ems">3</item>
    </style>
    <style name="CurrencyList" parent="@android:style/Widget.Spinner">
        <item name="android:gravity">right</item>
        <item name="android:layout_height">32dip</item>
    </style>
    <style name="CurrencySymbol" parent="Textview">
        <item name="android:gravity">right</item>
        <item name="android:ems">2</item>
    </style>
    <style name="Symbol" parent="Textview">
        <item name="android:ems">1</item>
    </style>
    <style name="table_row">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="table_row_center" parent="table_row">
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="table_column">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="table_column_left" parent="table_column">
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="table_column_right" parent="table_column">
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="input_number" parent="@android:style/Widget.EditText">
       	<item name="android:layout_width">wrap_content</item>
   	<item name="android:text">00000000.00</item>
		<item name="android:inputType">numberDecimal</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:gravity">center_vertical|center_horizontal</item>
		<item name="android:maxLength">12</item>
		<item name="android:maxLines">1</item>
		<item name="android:textSize">10sp</item>
		<item name="android:ems">9</item>
		<item name="android:digits">@string/allowed_digits_currency</item>
		<item name="android:selectAllOnFocus">true</item>
		<item name="android:imeOptions">actionDone</item>
		<item name="android:ellipsize">start</item>
	<item name="android:layout_height">32dip</item>
</style>
	<style name="short_input_number" parent="input_number">
       	<item name="android:text">0000.00</item>
		<item name="android:maxLength">9</item>
		<item name="android:ems">8</item>
	</style>
	<style name="short_input_integer" parent="short_input_number">
       	<item name="android:text">000</item>
		<item name="android:inputType">number</item>
		<item name="android:maxLength">3</item>
		<item name="android:ems">4</item>
	</style>
	<style name="shortest_input_number" parent="short_input_number">
       	<item name="android:text">000</item>
		<item name="android:maxLength">7</item>
		<item name="android:ems">5</item>
	</style>
	<style name="list_separator" parent="@android:attr/listSeparatorTextViewStyle">
		<item name="android:background">@android:drawable/dark_header</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">0sp</item>
	</style>
	<style name="list_item" parent="Textview">
		<item name="android:gravity">center_horizontal</item>
		<item name="android:textColor">#000000</item>
	</style>
</resources>
